{% load static %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="{% static 'css/style.css' %}" />
    <script src="{% static 'ckeditor/ckeditor/ckeditor.js' %}"></script>
</head>
<body>

    <!-- Navigation bar start -->
    <header class="site-header">
        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top" style="opacity: 0.7;">
            <div class="container">
                <!-- <a class="navbar-brand mr-4" href="{% url 'home' %}">HNSV</a> -->
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggle" aria-controls="navbarToggle" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarToggle">
                    <div class="navbar-nav mr-auto">
                        <a class="nav-item nav-link" href="{% url 'home' %}">HNSV</a>
                    </div>
                    <div class="navbar-nav">
                        {% if user.is_authenticated %}
                            <a class="nav-item nav-link" href="{% url 'jobskill-list' %}">Chọn kỹ năng</a>
                            <a class="nav-item nav-link" href="{% url 'job-list' %}">Chọn công việc</a>            
                            <a class="nav-item nav-link" href="{% url 'news-list' %}">Tuyển dụng</a>
                            <a class="nav-item nav-link" href="{% url 'profile' %}">Create Profile</a>
                            <a class="nav-item nav-link" href="{% url 'settings' %}">Update Profile</a>
                            <a class="nav-item nav-link" href="{% url 'logout' %}">Logout</a>
                        {% else %}
                            
                            <a class="nav-item nav-link" href="{% url 'login' %}">Login</a>
                            <a class="nav-item nav-link" href="{% url 'register' %}">Register</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <!-- Navigation bar end -->
    <!-- <header class="masthead"> -->


    <!-- </header> -->

    <!-- Content start -->
 


    <main role="main" class="container" style="margin-top: 80px; margin-bottom: 25px;">
       <div class="container d-flex align-items-center" >
                <div class="mx-auto text-center">
                    <div class="blog-thumbnail">
                        <a href="#">
                            <!-- <img src="imgTemplates/banner-HNSV-01.png" alt=""> -->
                            <img src="{% static 'imgTemplates/banner-HNSV-01.png' %}" alt="..." style="width: 100%; height: 80%;">
                        </a>
                    </div>
                    <h2 class="text-black-50 mx-auto mt-2 mb-5">Là dự án nhằm hỗ trợ sinh viên chuyên ngành Thương Mại Điện Tử tìm kiếm việc làm dựa vào những kỹ năng mà họ có. Bên cạnh đó, hỗ trọ thêm những kỹ năng cần có nếu sinh viên mong muốn.</h2>
                    <a class="btn btn-primary js-scroll-trigger" href="#about">Đọc thêm</a>
                </div>
         </div>
        {% if messages %}
        {% for message in messages %}
        <div class="alert alert-{{ message.tags }} mt-3">
            {{ message }}
        </div>
        {% endfor %}
        {% endif %}
        
        {% block content %}
        {% endblock content %}
    </main>
    <!-- Content end -->

    <!-- Footer start -->
    <footer id="sticky-footer" class="py-2 bg-dark text-white-50" style="position: fixed; bottom: 0; width: 100%; opacity: 0.8;">
        <div class="container text-center">
            <small>Copyright &copy; <a href="https://www.facebook.com/tarak.guezguez/" target="blank" class="text-white-50">HNSV</a></small>
        </div>
    </footer>
    <!-- Footer end -->

    <script>
        CKEDITOR.replace('id_about');
        CKEDITOR.replace('id_skills');
        CKEDITOR.replace('id_experience');
        CKEDITOR.replace('id_education');
        CKEDITOR.replace('id_services');
    </script>

    <script src="{% static 'js/validation.js' %}"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>

